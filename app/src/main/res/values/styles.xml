<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/sm_gray</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/starmeasure_turquoise</item>
    </style>

    <style name="titleContainer" parent="CardView">
        <item name="cardBackgroundColor">@color/transparent</item>
        <item name="android:background">@drawable/shape_toolbar_background_underline</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="container.title" parent="CardView">
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="android:background">@drawable/shape_container_title</item>
    </style>

    <style name="container" parent="CardView">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">@dimen/container_radius</item>
        <item name="android:background">@drawable/shape_container</item>
    </style>

</resources>
